<h1>Your Cart</h1>

<% if (cart && cart.products.length > 0) { %>
    <ul>
        <% cart.products.forEach(function(item) { %>
            <li>
                <strong><%= item.product.name %></strong> - $<%= item.product.price %> | Quantity: <%= item.quantity %>
                <form action="/api/cart/remove" method="POST" style="display:inline;">
                    <input type="hidden" name="productId" value="<%= item.product._id %>">
                    <button type="submit">Remove</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/api/products">Continue Shopping</a>
<% } else { %>
    <p>Your cart is empty</p>
    <a href="/api/products">Start Shopping</a>
<% } %>
